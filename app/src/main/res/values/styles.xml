<resources>
    <!-- Colors -->
    <color name="ActionColor">#F08C35</color>

    <color name="White">#FFFFFF</color>

    <color name="DarkColor">#1E3547</color>

    <color name="LightColor">#8DC5D8</color>

    <!-- Main Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:buttonStyle">@style/AppTheme.MyButton</item>
    </style>

    <style name="AppTheme.MyButton"
        parent="android:Widget.Button">
        <!--<item name="android:background">@color/ActionColor</item>-->
        <!--<item name="background">@color/ActionColor</item>-->
    </style>


    <!-- ActionBar styles -->
    <style name="AppTheme.MyActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/DarkColor</item>
        <item name="titleTextStyle">@style/AppTheme.MyActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.MyActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>

</resources>
